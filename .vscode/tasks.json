{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "compile file",
            "type": "shell",
            "command": "tsc",
            "args": [
                "${file}",
                "--outDir",
                "${workspaceRoot}/dist/test/current",
                "--module",
                "CommonJs",
                "--target",
                "es5",
                "--moduleResolution",
                "node",
                "--sourceMap"
            ],
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}